<resources>

    <!-- Theme Just For Splash -->
    <style name="NoActionBar" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- 
        	Can leave empty because parent theme hides action bar.
        	We use a sub-theme so that earlier versions can declare a parent theme that doesn't reference
        	"Holo" because Holo is only available at 11 and above. 
        -->
    </style>
    
    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@drawable/new_indicator</item>
        <item name="android:homeAsUpIndicator">@drawable/new_indicator</item>
        
        <item name="actionBarStyle">@style/Actionbar</item>
        <item name="android:actionBarStyle">@style/Actionbar</item>
        
        <item name="android:windowBackground">@color/window_bk_color</item>
        <item name="android:textSize">22sp</item>
        
        <item name="android:button">@style/plateButtonStyle</item>
    </style>
    
    <color name="window_bk_color">#FFFFFF</color>
    
    <style name="Actionbar" parent="@Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">#0066FF</item>
        <item name="android:background">#0066FF</item>
    </style>
    
    <style name="plateButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/plate_bk</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#0088FF</item>
    </style>
    
    <style name="MessageRowDateStyle" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#0088FF</item>
    </style>
    
    <style name="MessageRowDate" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#0044FF</item>
    </style>
    
    <!-- AlertDialog text color fix thanks to Shawn Castrianni, see: http://groups.google.com/group/android-developers/browse_thread/thread/f0b34621d3a70c4b -->
	<style name="AboutDialog" parent="@android:style/Theme.Dialog">
		<item name="android:textColor">?android:attr/textColorPrimaryDisableOnly</item>
	</style>

</resources>